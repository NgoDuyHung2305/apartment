<UserControl x:Class="Apartment_Management.View.RoomManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Apartment_Management.View"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:uc="clr-namespace:Apartment_Management.UserControls"
             xmlns:vm="clr-namespace:Apartment_Management.ViewModel" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#151f2d">
    <UserControl.DataContext>
        <vm:Room_Management_View_Model/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
    </UserControl.Resources>
    <Grid>

        <!--Searchbar-->


        <!-- Phần nội dung có thanh cuộn -->
            <Grid >
                <ScrollViewer VerticalScrollBarVisibility="Visible" Background="Transparent" Height="680" Margin="10">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Foreground" Value="#FF4CAF50" />
                        <!-- Màu mũi tên -->
                        <Setter Property="Background" Value="#202c44" />
                        <!-- Màu nền -->
                    </Style>
                </ScrollViewer.Resources>
                <ListView Background="Transparent" ItemsSource="{Binding RoomList}" SelectedItem="{Binding SelectedRoom}" BorderThickness="0">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding RoomCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="6" />
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                            <uc:RoomCard
                                    RoomName="{Binding RoomName}"
                                    RoomStatus="{Binding Status}"
                                    RoomPrice="{Binding Price}">
                                
                            </uc:RoomCard>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>
    </Grid>
</UserControl>
