<Window x:Class="Apartment_Management.View.ContractDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Apartment_Management.View"
        mc:Ignorable="d"
        Title="ContractDetails" Height="450" Width="800">
    <Grid Background="#151f2d" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Contract Details" FontSize="24" FontWeight="Bold" Foreground="White" 
                HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <Grid Margin="30,50,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="176*" />
                <ColumnDefinition Width="182*" />
                <ColumnDefinition Width="347*"/>
            </Grid.ColumnDefinitions>



            <!-- Dweller ID --><!--
            <TextBlock Text="Dweller:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
            <ComboBox x:Name="DwellerIdTextBox" Grid.Row="1" Height="30" Margin="176,10,0,10"
          ItemsSource="{Binding Name_IdDwellers}"
          IsEditable="True" Grid.ColumnSpan="3"
                   />-->
            <!--/>Text="{Binding DwellerId, UpdateSourceTrigger=PropertyChanged}"/>-->


            <!-- Dweller ID -->
            <TextBlock Text="Dweller ID:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
            <TextBlock x:Name="DwellerNameTextBox" Grid.Row="2" Height="30" Margin="176,10,0,10"
                    Foreground="White"
                  Text="{Binding dweller_name}" Grid.ColumnSpan="3"/>

            <!-- Room ID -->
            <TextBlock Text="Room:" Grid.Row="3" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
            <TextBlock x:Name="RoomIdComboBox" Grid.Row="3" Height="30" Margin="176,10,0,10" 
                   Foreground="White"
                   Text="{Binding room_name}" Grid.ColumnSpan="3"/>

            <!-- Contract Description -->
            <TextBlock Text="Description:" Grid.Row="4" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
            <TextBlock x:Name="DescriptionTextBox" Grid.Row="4" Height="30" Margin="176,10,0,10" 
                       Foreground="White"
                  Text="{Binding description}" Grid.ColumnSpan="3"/>

            <!-- Contract Price -->
            <TextBlock Text="Price:" Grid.Row="5" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
            <TextBlock x:Name="PriceTextBox" Grid.Row="5" Height="25" Margin="176,10,0,10" 
                          Foreground="White"
                  Text="{Binding price}" Grid.ColumnSpan="3"/>

            <!-- Start Date -->
            <TextBlock Text="Start Date:" Grid.Row="6" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
            <TextBlock x:Name="StartDatePicker" Grid.Row="6" Height="30" Margin="176,10,0,10"
                            Foreground="White"
                     Text="{Binding start_date}" Grid.ColumnSpan="3"
                     />

            <!-- End Date -->
            <TextBlock Text="End Date:" Grid.Row="7" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center" Foreground="White"/>
            <TextBlock x:Name="EndDatePicker" Grid.Row="7" Height="30" Margin="176,10,0,10" 
                            Foreground="White"
                     Text="{Binding end_date}" Grid.ColumnSpan="3"/>

        </Grid>
    </Grid>
</Window>
