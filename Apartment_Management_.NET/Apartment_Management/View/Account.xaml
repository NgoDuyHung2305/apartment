<UserControl x:Class="Apartment_Management.View.Account"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Apartment_Management.View"
             xmlns:vm="clr-namespace:Apartment_Management.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:Account_View_Model/>
    </UserControl.DataContext>
    <Grid Background="#151f2d">
        <!-- Nút quay lại -->
        <!--<Button Content="↩"
                FontSize="24"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10"
                Background="Transparent"
                Foreground="White"
                BorderThickness="0"
                Click="Back_Click" />-->

        <!-- Nội dung chính -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 200 0 0" >
            <!-- Ảnh đại diện và nút chỉnh sửa -->
            <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 -90,0,20">
                <Ellipse Width="100" Height="100" Fill="LightBlue" />
                <TextBlock Text="👤" 
                           FontSize="50"
                           HorizontalAlignment="Center" VerticalAlignment="Center" 
                           Foreground="White"/>
                <Button Width="25" Height="25"
                        Background="Black" Foreground="White"
                        FontSize="14"
                        Content="✎"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Margin="0,10,10,0" />
            </Grid>

            <!-- Thông tin tài khoản -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Full Name: " FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding CurrentUser.UserName}" FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Sex: " FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding CurrentUser.UserSex}" FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="D.O.B: " FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding CurrentUser.UserBirth}" FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Email:" FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding CurrentUser.UserMail}" FontSize="16" Foreground="White" Margin="0,10,0,0"/>

                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Phone: " FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding CurrentUser.UserPhone}" FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Date Started: " FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding CurrentUser.Date_Start}" FontSize="16" Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
