<UserControl x:Class="Apartment_Management.View.DwellerManagement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:uc="clr-namespace:Apartment_Management.UserControls"
             xmlns:local="clr-namespace:Apartment_Management.View"
             xmlns:vm="clr-namespace:Apartment_Management.ViewModel" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#151f2d">
    <UserControl.DataContext>
        <vm:Dweller_View_Model/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVis"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Searchbar-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <!--Search Textbox-->
            <TextBlock Margin="40 0 15 0" VerticalAlignment="Center" Foreground="#9ea4ad" Panel.ZIndex="1" 
IsHitTestVisible="False" Text="Search here ... "
Visibility="{Binding ElementName=txtbox_find, Path=Text.IsEmpty, Converter={StaticResource boolToVis}}"/>
            <TextBox Style="{StaticResource searchTextBox}" x:Name="txtbox_find"  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding SearchCommand}" Key="Enter" CommandParameter="{Binding Text, ElementName=txtbox_find}" />
                </TextBox.InputBindings>
            </TextBox>

            <!--Buttons-->
            <StackPanel Orientation="Horizontal" Grid.Column="1" Margin="20 0 0 0">
                <Button Style="{StaticResource topMenuButton}">
                    <Icon:PackIconMaterial Kind="Bell" Style="{StaticResource topMenuButtonIcon}" />
                </Button>

                <Button Style="{StaticResource topMenuButton}">
                    <Icon:PackIconMaterial Kind="Bookmark" Style="{StaticResource topMenuButtonIcon}" />
                </Button>

                <Button Style="{StaticResource topMenuButton}" Background="#1e2e44" Command="{Binding AccountCommand}">
                    <Icon:PackIconMaterial Kind="Account" Style="{StaticResource topMenuButtonIcon}"  />
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Button Style="{StaticResource menuButton}"  HorizontalAlignment="Right"  Foreground="#9ea4ad" Background="#1e2e44" Content="Thêm cư dân" VerticalAlignment="Top" Width="85" Margin="0,7,7,0" Command="{Binding AddDwellerCommand}"></Button>
        </Grid>
        <Grid Grid.Row="2">
                <DataGrid  Margin="20,30,20,20"
                  Background="#202c44" Foreground="#ffffff"
                  AutoGenerateColumns="False"
                  HorizontalScrollBarVisibility="Hidden"
                  VerticalScrollBarVisibility="Hidden"
                  GridLinesVisibility="Vertical"
                 Height="540"
                  RowHeight="30"
                  FontSize="15"
                  IsReadOnly="True"
 HeadersVisibility="Column" CanUserAddRows="False"    CanUserResizeColumns="False"  
                 ItemsSource="{Binding Dwellers}" SelectedItem="{Binding SelectedDweller}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding UpdateDwellerCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1e2e44" />
                        <Setter Property="Foreground" Value="#9ea4ad" />
                        <Setter Property="FontWeight" Value="Bold" />
                    </Style>
                </DataGrid.Resources>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#243347"/>
                        
                    </Style>
                    
                    
                </DataGrid.RowStyle>

                <DataGrid.Columns  >
                        <DataGridTextColumn Header="Cư dân" Binding="{Binding DwellerName}" Width="*" IsReadOnly="True"  />
                    <DataGridTextColumn Header="Số phòng" Binding="{Binding RoomID}" Width="*" IsReadOnly="True" />
                        <DataGridTextColumn Header="Số điện thoại" Binding="{Binding DwellerPhone}" Width="*" IsReadOnly="True" />
                        <DataGridTextColumn Header="Email" Binding="{Binding DwellerEmail}" Width="*" IsReadOnly="True" />
                    </DataGrid.Columns>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <!--<Setter Property="Background" Value="#243347" />-->
                        <!--<Setter Property="HorizontalAlignment" Value="Center"/>
<Setter Property="VerticalAlignment" Value="Center"/>-->
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Background" Value="#243347" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="BorderThickness" Value="0" />
                        <!-- Căn giữa nội dung -->
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>

                        <!-- Xử lý khi ô được chọn -->
                        <Style.Triggers>
                            <!-- Khi ô được chọn -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#243347" />
                                <!-- Màu nền khi được chọn -->
                                <Setter Property="Foreground" Value="White" />
                                <!-- Màu chữ khi được chọn -->

                            </Trigger>
                            
                        </Style.Triggers>
                        
                    </Style>
                </DataGrid.CellStyle>

                <!-- Header Style -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#243347" />
                        <Setter Property="Foreground" Value="#ffffff" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="Height" Value="35"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
