<Window x:Class="Apartment_Management.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Apartment_Management.View"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:uc="clr-namespace:Apartment_Management.UserControls"
        xmlns:vm="clr-namespace:Apartment_Management.ViewModel"
        mc:Ignorable="d"
        Title="SignIn" Height="450" Width="800" >
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>
    <Grid Background="#151f2d">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0">
            <Image Source="\Assets\Images\5da5e760-5757-46c2-ad7d-d6ad7be8ec6f.jpg">
                
            </Image>
        </Border>

        <!-- Divider Border -->

        <StackPanel Grid.Column="1">
            <TextBlock Text="ĐĂNG NHẬP" Margin="60 40 60 0" Foreground="White" TextAlignment="Center" FontSize="38" FontFamily="Times New Roman" />

            <StackPanel Orientation="Horizontal" Margin="20">
                <Icon:PackIconMaterial Kind="Account" Width="50" Height="50" Foreground="White"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="10 0" Width="305"  Foreground="Black" FontSize="20" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="20 5 20 10">
                <Icon:PackIconMaterial Kind="Lock" Width="50" Height="50" Foreground="White"/>
                <uc:PasswordControl Margin="10 0" Width="305"  Foreground="Black" FontSize="20" Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            </StackPanel>

            <CheckBox IsChecked="{Binding IsChecked}" Content="Ghi nhớ đăng nhập" Foreground="White" FontSize="14" Margin="235 0 0 15" />

            <Button Width="106" Height="40" BorderThickness="2" BorderBrush="White" Background="White"  Foreground="Black" ToolTip="Đăng nhập" Content="Đăng nhập" Command="{Binding LoginCommand}"/>

            <StackPanel Orientation="Horizontal" Margin="0 15 0 0"/>

        </StackPanel>
    </Grid>
</Window>
