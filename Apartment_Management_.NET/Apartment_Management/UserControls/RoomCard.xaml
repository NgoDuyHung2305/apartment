<UserControl x:Class="Apartment_Management.UserControls.RoomCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Apartment_Management.UserControls"
             xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             x:Name="Room">
    <Border Margin="0 0 0 20">
        <Border.Style>
            <Style TargetType="Border" BasedOn="{StaticResource mainBorder}">
                <Setter Property="BorderThickness" Value="1.5"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Icon:PackIconMaterial Kind="Home" Foreground="#dfe1e3" HorizontalAlignment="Center" />
                <TextBlock Grid.Column="1" Text="{Binding ElementName=Room, Path=RoomName}" Foreground="#dfe1e3" FontSize="16" FontWeight="SemiBold" Margin="5 0 0 0"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock  Text="Status: " Foreground="#dfe1e3" FontSize="16" FontWeight="SemiBold" Margin="5 0 0 0"/>
                <TextBlock Grid.Column="1" Text="{Binding ElementName=Room, Path= RoomStatus}" Foreground="#dfe1e3" FontSize="16" FontWeight="SemiBold" Margin="5 0 0 0"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock  Text="Price: " Foreground="#dfe1e3" FontSize="16" FontWeight="SemiBold" Margin="5 0 0 0"/>
                <TextBlock Grid.Column="1" Text="{Binding ElementName=Room, Path= RoomPrice}" Foreground="#dfe1e3" FontSize="16" FontWeight="SemiBold" Margin="5 0 0 0"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
